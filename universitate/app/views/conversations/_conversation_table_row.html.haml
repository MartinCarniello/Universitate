%li.w3-padding-16
  = link_to conversation_path(conversation), class: 'view-button btn btn-primary btn-lg pull-right' do
    = I18n.t("views.users.index.view_button")
  = image_tag conversation.linked_user_avatar_url, class: 'w3-left w3-circle w3-margin-right', style: "width: 100px;"
  %br/
  %span.w3-xlarge
    = conversation.linked_user_display_name
  - if conversation.unreaded_messages > 0
    %span.badge.badge-success.bounceIn.animation-delay5
      = conversation.unreaded_messages
  %br/
  %h4.grey
    = conversation.last_message_with_name
