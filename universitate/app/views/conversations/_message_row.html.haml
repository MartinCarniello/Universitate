%li.clearfix{ class: "#{message.css_class}" }
  .chat-body.clearfix
    .header
      %strong.primary-font{ class: "#{'pull-right' if message.current_user_sender?}" }
        = message.sender_display_name
      %small.text-muted{ class: "#{'pull-right' unless message.current_user_sender?}" }
        %i.fa.fa-clock-o
        = message.datetime_creation
    %p{ class: "#{message.current_user_sender? ? 'pull-right' : 'pull-left'}" }
      = message.message
