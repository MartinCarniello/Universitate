%li.clearfix{ class: "#{message.css_class}" }
  %span.chat-img{ class: "pull-#{message.css_class}" }
    = image_tag message.sender_avatar_url
  .chat-body.clearfix
    .header
      %strong.primary-font
        = message.sender_display_name
      %small.pull-right.text-muted
        %i.fa.fa-clock-o
        = message.datetime_creation
    %p
      = message.message
