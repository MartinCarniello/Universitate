.login-wrapper
  .text-center
    %h2.fadeInUp.animation-delay5{ style: 'font-weight:bold' }
      %span.text-success
        = I18n.t('brand.pre')
      %span.orange{ style: 'text-shadow:0 1px #fff; margin-left: -5px;' }
        = I18n.t('brand.post')
  .login-widget.animation-delay1
    .panel.panel-default
      .panel-heading.clearfix
        .pull-left
          = fa_icon 'edit'
          = I18n.t('views.forgot_password.change_password_title')
        .pull-right
          %span{ style:'font-size:11px;' }
          = link_to new_user_session_path, class: 'btn btn-default btn-xs login-link', style: 'margin-top:-2px;' do
            = fa_icon 'sign-in'
            = I18n.t('views.forgot_password.log_in')
      .panel-body
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = f.hidden_field :reset_password_token
          .form-group
            %label
              = I18n.t('activerecord.attributes.user.password')
            - if @minimum_password_length
              %em
                = "(#{@minimum_password_length} #{I18n.t('views.sign_up.password_length')})"
              %br/
            = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control input-sm bounceIn animation-delay2'
          .form-group
            %label
              = I18n.t('activerecord.attributes.user.password_confirmation')
            %br/
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-sm bounceIn animation-delay2'
          .actions
            = f.button :submit, class: 'btn btn-success btn-sm bounceIn animation-delay5 pull-right' do
              = fa_icon 'lock'
              = I18n.t('views.forgot_password.change_password')
