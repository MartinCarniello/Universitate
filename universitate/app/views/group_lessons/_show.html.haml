.modal-dialog
  .modal-content
    .modal-header
      %button{ type: "button", class: "close", :'aria-label' => "Close", data: { dismiss: "modal" } }
        %span{ :'aria-hidden' => "true" }
          Ã—
      %h3.modal-title
        = I18n.t("views.group_lessons.edit.group_lesson")
    .modal-body
      - if group_lesson.students.empty?
        .well
          %h4.text-center
            = I18n.t("views.group_lessons.show.group_lesson_empty")
      - else
        .row
          - group_lesson.students.each do |student|
            .col-xs-4
              .thumbnail
                = image_tag student.avatar_url, style: "width: 100px; height: 100px;"
                .caption
                  %h4.text-center
                    = student.decorate.display_name
    .modal-footer
      = link_to I18n.t('views.teacher_profile.rating.cancel'), "#", class: "btn btn-sm btn-danger", data: { dismiss: "modal" }
