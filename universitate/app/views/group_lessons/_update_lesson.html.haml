.modal-dialog
  .modal-content
    = simple_form_for(lesson, url: group_lesson_path, method: :put) do |lesson_form|
      .modal-header
        %button{ type:"button", class: "close", :'aria-label' => "Close", data: { dismiss: "modal" } }
          %span{ :'aria-hidden' => "true" }
            Ã—
        .h3
          = I18n.t("views.group_lessons.edit.group_lesson")
        .modal-body
          .form-group
            %label.control-label.col-md-2
              = I18n.t("views.group_lessons.new.subject")
            .col-md-8
              = lesson_form.collection_select :subject_id, subjects, :id, :name, { include_blank: true }, class: 'form-control bounceIn animation-delay2'
          %br/
          %br/
          .form-group
            %label.control-label.col-md-2
              = I18n.t("views.group_lessons.new.day_and_hour")
            .col-md-8
              = lesson_form.text_field :day_and_hour, class: "js-datetimepicker form-control bounceIn animation-delay2"
          %br/
        .modal-footer
          = lesson_form.submit I18n.t("views.group_lessons.edit.update")  , class:'btn btn-success btn-sm'
          = link_to I18n.t('views.teacher_profile.rating.cancel'), "#", class: "btn", data: { dismiss: "modal" }
