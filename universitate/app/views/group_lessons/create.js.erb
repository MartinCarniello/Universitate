<% unless @group_lesson.errors.empty? %>
  $("#update-modal").html("<%= j(render partial: 'lesson_form', locals: { group_lesson: @group_lesson , subjects: @subjects}) %>");
<% else %>
  $("#update-modal").modal("toggle");
  var group_lesson_row = $("#my_lessons .js-group-lessons-table tbody");
  group_lesson_row.append("<%= j(render partial: 'group_lessons_row', locals: { lesson: @group_lesson.decorate }) %>");
  swal('', '<%= flash[:notice] %>', 'success');
<% end %>
