<% if @group_lesson.errors.empty? %>
  $("#js-update-modal").modal("toggle");
  var group_lesson_row = $("#my_lessons .js-group-lessons-table tr[data-id=" + "<%= @group_lesson.id %>" + "]");
  group_lesson_row.after("<%= j(render partial: 'group_lessons_row', locals: { lesson: @group_lesson.decorate }) %>");
  group_lesson_row.remove();
  swal('', '<%= flash[:notice] %>', 'success');
<% else %>
  $("#js-update-modal").html("<%= j(render partial: 'lesson_form', locals: { group_lesson: @group_lesson , subjects: @subjects}) %>");
  initialize_datetimepicker();
<% end %>
