%form.form-horizontal.form-border
  .panel-heading
    = I18n.t('views.teacher_profile.edit.basicInfo')
  .panel-body
    .form-group
      %label.control-label.col-md-2= I18n.t('activerecord.attributes.user.first_name')
      .col-md-10
        %input.form-control.input-sm{:placeholder => "first_name", :type => "text", :value => "John"}/
    .form-group
      %label.control-label.col-md-2= I18n.t('activerecord.attributes.user.last_name')
      .col-md-10
        %input.form-control.input-sm{:placeholder => "last_name", :type => "text", :value => "Doe"}/
    .form-group
      %label.control-label.col-md-2 Password
      .col-md-10
        %input.form-control.input-sm{:type => "password", :value => "Password"}/
      / /.col
    / /form-group
    .form-group
      %label.control-label.col-md-2 Email
      .col-md-10
        %input.form-control.input-sm{:type => "text", :value => "john_doe@email.com"}/
      / /.col
    / /form-group
    .form-group
      %label.control-label.col-md-2 Gender
      .col-md-10
        %label.label-radio.inline
          %input{:checked => "checked", :name => "inline-radio", :type => "radio"}/
          %span.custom-radio
          Male
        %label.label-radio.inline
          %input{:name => "inline-radio", :type => "radio"}/
          %span.custom-radio
          Female
      / /.col
    / /form-group
    .form-group
      %label.control-label.col-md-2 Address
      .col-md-10
        %textarea.form-control{:rows => "3"}
      / /.col
    / /form-group
    .form-group
      %label.control-label.col-md-2 Phone
      .col-md-10
        %input.form-control.input-sm{:type => "text"}/
      / /.col
    / /form-group
  .panel-footer
    .text-right
      %button.btn.btn-sm.btn-success Update
      %button.btn.btn-sm.btn-success{:type => "reset"} Reset
