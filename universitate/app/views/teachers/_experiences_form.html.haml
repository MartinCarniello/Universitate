= form.fields_for type do |teacher_experiences_fields|
  .row
    .col-md-10
      .jumbotron
        .row
          .form-group
            %label.control-label.col-md-2
              = I18n.t("activerecord.attributes.#{type.to_s}.name_of_the_place")
            .col-md-10
              = teacher_experiences_fields.text_field :name_of_the_place , class: 'form-control input-sm bounceIn animation-delay6'
          %br/
          %br/
        .row
          .form-group
            %label.control-label.col-md-2
              = I18n.t("activerecord.attributes.#{type.to_s}.description")
            .col-md-10
              = teacher_experiences_fields.text_area :description , class: 'form-control input-sm bounceIn animation-delay6'
          %br/
          %br/
          %br/
        .row
          .form-group
            %label.control-label.col-md-2
              = I18n.t("activerecord.attributes.#{type.to_s}.period_start")
            .col-md-10
              = teacher_experiences_fields.date_field :period_start , class: 'form-control input-sm bounceIn animation-delay6'
          %br/
          %br/
        .row
          .form-group
            %label.control-label.col-md-2
              = I18n.t("activerecord.attributes.#{type.to_s}.period_end")
            .col-md-10
              = teacher_experiences_fields.date_field :period_end , class: 'form-control input-sm bounceIn animation-delay6'
          %br/
          %br/