
= form_for(@teacher,class: "form-horizontal.form-border" ,:url => url_for(:controller => 'teachers' ,:action => 'update')) do |f|
  .panel-heading
    = I18n.t('views.teacher_profile.edit.basicInfo')
  .panel-body
    .form-group
      %label.control-label.col-md-2= I18n.t('activerecord.attributes.user.first_name')
      .col-md-10
        = f.text_field :first_name,class: 'form-control input-sm bounceIn animation-delay2', placeholder: current_user.first_name
    .form-group
      %label.control-label.col-md-2= I18n.t('activerecord.attributes.user.last_name')
      .col-md-10
        = f.text_field :last_name,class: 'form-control input-sm bounceIn animation-delay3', placeholder: current_user.last_name
