    .form-group
      %label.control-label.col-md-2 Email
      .col-md-10
        = f.text_field :email,class: 'form-control input-sm bounceIn animation-delay4', placeholder: current_user.email
      / /.col
    / /form-group
    -# .form-group
    -#   %label.control-label.col-md-2 Gender
    -#   .col-md-10
    -#     %label.label-radio.inline
    -#       %input{:checked => "checked", :name => "inline-radio", :type => "radio"}/
