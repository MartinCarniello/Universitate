    -#       %input{:name => "inline-radio", :type => "radio"}/
    -#       %span.custom-radio
    -#       Female
      / /.col
    / /form-group
    .form-group
      %label.control-label.col-md-2= I18n.t('views.teacher_profile.edit.description')
      .col-md-10
        = f.text_area :teacher_profile_description ,class: 'form-control input-sm bounceIn animation-delay5' ,placeholder: current_user.teacher_profile_description
      / /.col
    / /form-group
