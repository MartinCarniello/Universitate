.padding-md
  .row
    .col-md-3.col-sm-3
      .row
        .col-xs-6.col-sm-12.col-md-6.text-center
          = image_tag @teacher.avatar_url, class: 'btn btn-file img-thumbnail', onclick: "$(this).parent().find('input[type=file]').click();"
          %input{:name => "uploaded_file", :onchange => "$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\\\|/]/).pop());", :style => "display: none;", :type => "file"}
          %input.form-control{:style => "display: none;"}
        .col-xs-6.col-sm-12.col-md-6
          %strong.font-14.text-center
            = teacher.first_name
            = teacher.last_name
          %p
            = teacher.teacher_profile_hour_rate
          %small.block.text-muted
            = teacher.email
          .seperator
          - if current_user.id != teacher.id
            = link_to new_conversation_path(linked_user_id: teacher.id), class: 'btn btn-info', data: { no_turbolink: true } do
              = fa_icon 'wechat', class: 'fa-lg'
              = I18n.t('views.teacher_profile.show.contact')
