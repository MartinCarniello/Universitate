.col-md-9.col-sm-9
  .row
    %h4.headline
      = I18n.t("views.teacher_profile.show.studies")
    .panel.panel-default.fadeInDown.animation-delay4
      #accordionStudy.panel-group
        - @teacher.teacher_profile.studies.each do |study|
          .panel.panel-default
            .panel-heading
              %h4.panel-title
                %a.accordion-toggle.collapsed{"data-parent" => "#accordionStudy", "data-toggle" => "collapse", :href => "#"+study.id.to_s}
                  %p
                    = study.name_of_the_place
                    %div{class:'panel-collapse.collapse', id:study.id}
                      .panel-body
                      = study.description
