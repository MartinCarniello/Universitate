.row
  .col-md-9.col-sm-9
    %h4.headline
      = I18n.t("views.teacher_profile.show.work_experience")
    .panel.panel-default.fadeInDown.animation-delay4
      #accordionWork
      - if !@works.nil?
        - @works.each do |work|
          .panel-heading
            %h5.panel-title
              %a.accordion-toggle.collapsed{"data-parent" => "#accordionWork", "data-toggle" => "collapse", :href => "##{work.id}"}
                %p
                  = work.name_of_the_place
          %div{class: 'panel-collapse collapse', id: work.id}
            .panel-body
              = "#{work.period_start.strftime("%m-%Y")} - #{work.period_end.strftime("%m-%Y")}"
              %br/
              = work.description
